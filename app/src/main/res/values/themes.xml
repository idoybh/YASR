<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SoundRecorder" parent="Theme.Material3.DynamicColors.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/material_dynamic_primary60</item>
        <item name="colorPrimaryVariant">@color/material_dynamic_primary70</item>
        <item name="colorOnPrimary">@color/material_dynamic_primary10</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/material_dynamic_secondary60</item>
        <item name="colorSecondaryVariant">@color/material_dynamic_secondary70</item>
        <item name="colorOnSecondary">@color/material_dynamic_secondary10</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="preferenceTheme">@style/ThemeOverlay.App.Preference</item>
    </style>
    <style name="Theme.SoundRecorder.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="ThemeOverlay.App.Preference" parent="PreferenceThemeOverlay">
        <item name="switchPreferenceCompatStyle">@style/PreferenceMaterialSwitch</item>
    </style>
    <style name="PreferenceMaterialSwitch" parent="@style/Preference.SwitchPreferenceCompat.Material">
        <item name="widgetLayout">@layout/preference_switch</item>
    </style>
    <style name="Theme.SoundRecorder.AppBarOverlay" parent="Theme.Material3.Dark"/>
    <style name="Theme.SoundRecorder.PopupOverlay" parent="Theme.Material3.Dark"/>
</resources>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SoundRecorder" parent="Theme.Material3.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@android:color/system_accent1_100</item>
        <item name="colorPrimaryVariant">@android:color/system_accent1_200</item>
        <item name="colorOnPrimary">@android:color/system_accent1_900</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@android:color/system_accent2_100</item>
        <item name="colorSecondaryVariant">@android:color/system_accent2_200</item>
        <item name="colorOnSecondary">@android:color/system_accent2_900</item>
        <item name="android:statusBarColor">@null</item>
    </style>
    <style name="Theme.SoundRecorder.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.SoundRecorder.AppBarOverlay" parent="Theme.Material3.Dark"/>
    <style name="Theme.SoundRecorder.PopupOverlay" parent="Theme.Material3.Dark"/>
</resources>